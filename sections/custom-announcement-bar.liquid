<style>
  .custom-announcement-bar-container { 
  max-width:1440px;
  width:100%;
  margin:0 auto;
  display:flex;
  padding:4px 0;
  justify-content:space-between;
  color:rgb(255,255,255);
    letter-spacing: 0.06rem;
    line-height: calc(1 + 0.8 / var(--font-body-scale));
    font-family: var(--font-body-family);
    font-style: var(--font-body-style);
    font-weight: var(--font-body-weight);
    font-size:1.4rem;
    padding: 0 12px
}
.custom-announcement-bar{
  width:100%;
}

.custom-announcement-bar__item__child{
  padding:0;
  margin:0;
  display:flex;
  color:inherit;
  text-decoration:none;
  align-items:center;
  justify-content:center;
  gap:6px;
}
.custom-announcement-bar-trustpilot{
  display:flex;
  align-items:center;
}

@keyframes slide {
  0% {
    transform: translateX(0); /* Show Slide 1 */
  }
  13% {
    transform: translateX(0); /* Show Slide 1 */
  }
  26% {
    transform: translateX(-100%); /* Show Slide 1 */
  }
  39% {
    transform: translateX(-100%); /* Show Slide 1 */
  }
  52% {
    transform: translateX(-200%); /* Show Slide 1 */
  }
  65% {
    transform: translateX(-200%); /* Show Slide 1 */
  }
  78% {
    transform: translateX(-100%); /* Show Slide 1 */
  }
  91% {
    transform: translateX(-100%); /* Show Slide 1 */
  }
  100% {
    transform: translateX(0); /* Show Slide 1 */
  }
}
@media screen and (max-width:860px) {
  .custom-announcement-bar-container { 
    animation: slide 13s infinite;
     max-width:unset;
     width:100%;
     position:relative;
  }
    .custom-announcement-bar__item{
    max-width:550px;
    width:100%;
    white-space: nowrap;
    flex: 0 0 100%;
    display: flex;
    align-items: center !important;
    justify-content: center !important;
  }
  .custom-announcement-bar { 
    justify-content: center;
    max-width: 550px;
    margin:0 auto;
    overflow: hidden;
    width: 100%;
    position:relative;
    flex-wrap: nowrap;
  }
}
.custom-announcement-bar-black {
  background:black;
}
</style>
<div class="custom-announcement-bar-black">
<div class="custom-announcement-bar">
  <div class="custom-announcement-bar-container">
    <div class="custom-announcement-bar__item">
      <p class="custom-announcement-bar__item__child">
        Est. 1989
      </p>
    </div>
    <div class="custom-announcement-bar__item custom-announcement-bar-trustpilot">
      <div class="custom-announcement-bar__item__child">
        <a class="custom-announcement-bar__item__child" href="https://uk.trustpilot.com/review/goldcrest-blinds.co.uk" target="_blank">Rated 4.7/5</a>
            <div style="display:flex;gap:2px;">
            {% for i in (1..5) %}
            <img src="https://cdn.shopify.com/s/files/1/0631/1375/6761/files/1_STAR_SMALLER.png?v=1760009910" height="20px" width="20px">
          {% endfor %}
        </div>
    </div>
    </div>
    <div class="custom-announcement-bar__item">
      <p class="custom-announcement-bar__item__child">
        Made in Scotland
        <img src="https://cdn.shopify.com/s/files/1/0733/8062/6669/files/18e3ee60-b53e-4b82-9f47-3b9b0297e042.jpg?v=1742395119" height="15px" width="20px">
      </p>
    </div>
  </div>
</div>
</div>


